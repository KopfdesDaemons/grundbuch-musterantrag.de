  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "Start Dev Server",
      "type": "shell",
      "command": "docker compose -f docker-compose.dev.yml up",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Start Dev Server --build",
      "type": "shell",
      "command": "docker compose -f docker-compose.dev.yml up --build",
      "group": "none",
      "problemMatcher": []
    }
  ]
}
